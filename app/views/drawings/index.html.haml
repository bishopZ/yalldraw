=render 'shared/header'
%script
  ! vectors = JSON.parse('#{@values || '{}'}');

.container
  .row
    .span9#canvas-container
      %canvas
    .tool-contain.span3
      %h2 Tools
      .center
        .row
          .btn-group{ 'data-toggle' => 'buttons-radio' }
            %button.btn arrow
            %p
            %button.btn freeform
            %button.btn line
            %p
            %button.btn rectangle
            %button.btn circle

      %hs Brush Size:
      .row
        .span1
          %input#brush-size-text{ :value => 6, :type => 'text' }
        .slider.span2
          #brush-size-slider

      %ul
        %li
          %label{ for: 'fg-color' }
            %h2 Stroke:
          %input#fg-color{ :value => '#000000', :name => 'fg-color', :type => 'text' }

        %li
          %label{ for: 'bg-color' }
            %h2 Fill:
          %input#bg-color{ :value => '#FF1493', :name => 'bg-color', :type => 'text' }
